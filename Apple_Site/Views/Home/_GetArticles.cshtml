@model IEnumerable<Apple_Site.Models.Article>
@if (Model.Count() > 0)
{
    @foreach (Article article in Model)
    {
        <div class="content-card">
            <h1 class="title-card">@article.Title</h1>
            <img src="@("/image/"+ article.ImageName)" width="100%" alt="">
            <p>
                @article.Description
            </p>
            <a href="./article-se3.html" class="card-link">Читать далее...</a>
        </div>
    }
 }
else
{
    <h3>Список постов пуст</h3>
}
